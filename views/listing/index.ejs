<% layout("/layouts/boilerplate") %>
    <style>
        #filters {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .filter {
            text-align: center;
            margin-right: 2rem;
            margin-top: 2rem;
            opacity: 0.7;
        }
        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }
        .filter p {
            font-size: 0.8rem;
        }

        .tax_info{
            display: none;
        }
        .tex_toggle{
            /* display: block; */
            cursor: pointer;
            margin-top: 1rem;
            border: 1px solid black;
            /* height: 3.5rem; */
            padding: 0.5rem;
            border-radius: 1rem;
            display: flex;
            align-items: center;
            margin-left: 4rem;
            /* display: none; */
        }

        
    </style>
<body>
    <!-- <h3>All Lists</h3> -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div> <!-- Added missing "<" -->
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain"></i></div> <!-- Added missing "<" -->
            <p>Moutains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div> <!-- Added missing "<" -->
            <p>Amazing pools</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div> <!-- Added missing "<" -->
            <p>Camping</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farms</p>
        </div>
        <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div> <!-- Added missing "<" -->
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-ship"></i></div> <!-- Added missing "<" -->
            <p>Boats</p>
        </div>
        <div class="tex_toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
              </div>
        </div>
        
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListing) { %>
            <div class="card" style="width: 18rem;">
                <a href="/listing/<%= listing._id %>" class="listing-links">
                    <!-- Use listing.image as a string (not an object) -->
                    <img src="<%= listing.image ? listing.image.url : '/path/to/default/image.jpg' %>" class="card-img-top" alt="listing_image">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %> / Night</p>
                        <i class="tax_info"> &nbsp; +18% GST</i>
                    </div>    
                </a>
            </div>
        <% } %>
    </div>
</body>

<script>
    let TaxSwotch = document.getElementById('flexSwitchCheckDefault');
    TaxSwotch.addEventListener('click',() => {
        let texInfo = document.getElementsByClassName('tax_info');
        for(info of texInfo){
            if(info.style.display != 'inline'){
                info.style.display = 'inline';
            }else{
                info.style.display = 'none';
            }
        }
    })
</script>
